  <!--
    Configure managed and native KSA DLLs.
    Adjust the paths below if your KSA installation is in a different location.
    On macOS we copy native dylibs into the managed project's output folder so
    the runtime loader can find them next to the executable.
  -->

  <PropertyGroup>
    <!-- Path containing the managed KSA assemblies (Brutal.* .dll) -->
    <KsaManagedDir>/Users/asherwin/Applications/Sikarugir/KSAv2.app/Contents/SharedSupport/prefix/drive_c/Program Files/Kitten Space Agency</KsaManagedDir>
    <!-- Path containing any native libs provided by KSA (if any) -->
     <VulkanLibDir>/Users/asherwin/VulkanSDK/1.4.328.1/macOS/lib</VulkanLibDir>
     <GlfwLibDir>/opt/homebrew/Cellar/glfw/3.4/lib</GlfwLibDir>
    <KsaNativeDir>/Users/asherwin/Applications/Sikarugir/KSAv2.app/Contents/SharedSupport/prefix/drive_c/Program Files/Kitten Space Agency</KsaNativeDir>
  </PropertyGroup>

  <ItemGroup>
    <!-- Managed assembly references (only added if the file exists) -->
    <Reference Include="Brutal.Glfw" Condition="Exists('$(KsaManagedDir)/Brutal.Glfw.dll')">
      <HintPath>$(KsaManagedDir)/Brutal.Glfw.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Brutal.ImGui.Abstractions" Condition="Exists('$(KsaManagedDir)/Brutal.ImGui.Abstractions.dll')">
      <HintPath>$(KsaManagedDir)/Brutal.ImGui.Abstractions.dll</HintPath>
