      <Private>true</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <!-- Native DLLs for glfw, vulkan, imgui -->
    <None Include="$(GlfwLibDir)/libglfw.dylib">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
